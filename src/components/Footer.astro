---
import logo from '../assets/logo.svg';
import { getThemesWithSlugs } from '../config/taxonomy.js';

const temi = getThemesWithSlugs();
const meta = Math.ceil(temi.length / 2);
const temiCol1 = temi.slice(0, meta);
const temiCol2 = temi.slice(meta);

const sezioniFormali = [
  { nome: 'Editoriali', slug: 'editoriali' },
  { nome: 'Recensioni', slug: 'recensioni' },
  { nome: 'Interviste', slug: 'interviste' },
  { nome: 'Testimonianze', slug: 'testimonianze' },
];

const aboutLinks = [
  { nome: 'Chi siamo', slug: '/chi-siamo' },
  { nome: 'La Redazione', slug: '/chi-siamo/la-redazione' },
  { nome: 'La Redazione storica', slug: '/chi-siamo/redazione-storica' },
  { nome: 'Collaboratori', slug: '/chi-siamo/collaboratori' },
  { nome: 'Hanno scritto per noi', slug: '/chi-siamo/hanno-scritto-per-noi' },
  { nome: 'Info e contatti', slug: '/chi-siamo/contatti' },
];

const legalLinks = [
  { nome: 'Privacy Policy', url: 'https://www.iubenda.com/privacy-policy/placeholder' },
  { nome: 'Cookie Policy', url: 'https://www.iubenda.com/cookie-policy/placeholder' },
  { nome: 'Termini e Condizioni', url: 'https://www.iubenda.com/terms-and-conditions/placeholder' },
];

const socialLinks = [
  { nome: 'Facebook', url: 'https://www.facebook.com/OmbreeLuciRivista/', icon: 'facebook' },
  { nome: 'Instagram', url: 'https://www.instagram.com/ombreeluci_magazine/', icon: 'instagram' },
  { nome: 'X', url: 'https://x.com/Ombre_Luci', icon: 'x' },
  { nome: 'YouTube', url: 'https://www.youtube.com/channel/UCypEHP-N_RaUiz1BcBsplVQ', icon: 'youtube' },
  { nome: 'TikTok', url: '#', icon: 'tiktok' },
];
---

<div class="footer-reveal-wrap">
  <div class="reveal-spacer" aria-hidden="true"></div>
  <footer class="site-footer" id="site-footer" role="contentinfo">
  <div class="footer-inner">
    <div class="footer-grid">
      <!-- Colonna 1: Identità (logo, tagline, editore, legale, social in fondo) -->
      <div class="footer-col footer-col-identity">
        <a href="/" class="footer-logo-link">
          <img src={logo.src} alt="Ombre e Luci" class="footer-logo" width="160" height="55" />
        </a>
        <p class="footer-tagline">Dal 1974 al 2026</p>
        <p class="footer-editor">
          Edito da <a href="https://www.fedeeluce.it" target="_blank" rel="noopener noreferrer" class="footer-link">Associazione Fede e Luce A.P.S.</a>
        </p>
        <p class="footer-legal">Rivista trimestrale. Testata registrata presso il Tribunale di Roma, iscrizione n. 1 del 16 gennaio 2020. Direzione, redazione e amministrazione: Via dei Cessati Spiriti 3, 00185 Roma.</p>
        <div class="footer-social" aria-label="Seguici">
          {socialLinks.map((s) => (
            <a href={s.url} target="_blank" rel="noopener noreferrer" class="footer-social-link" aria-label={s.nome}>
              {s.icon === 'facebook' && <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>}
              {s.icon === 'instagram' && <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>}
              {s.icon === 'x' && <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>}
              {s.icon === 'youtube' && <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>}
              {s.icon === 'tiktok' && <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/></svg>}
            </a>
          ))}
        </div>
      </div>

      <!-- Colonna 2: Chi siamo -->
      <div class="footer-col">
        <h3 class="footer-title">Chi siamo</h3>
        <ul class="footer-list">
          {aboutLinks.map((item) => (
            <li>
              <a href={item.slug} class="footer-link">{item.nome}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Colonna 3: Temi (due colonne, una sola intestazione) -->
      <div class="footer-col footer-col-temi">
        <h3 class="footer-title">Temi</h3>
        <div class="footer-temi-grid">
          <ul class="footer-list">
            {temiCol1.map((cat) => (
              <li>
                <a href={`/categoria/${cat.slug}`} class="footer-link">{cat.nome}</a>
              </li>
            ))}
          </ul>
          <ul class="footer-list">
            {temiCol2.map((cat) => (
              <li>
                <a href={`/categoria/${cat.slug}`} class="footer-link">{cat.nome}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Colonna 4: Sezioni -->
      <div class="footer-col">
        <h3 class="footer-title">Sezioni</h3>
        <ul class="footer-list">
          {sezioniFormali.map((cat) => (
            <li>
              <a href={`/categoria/${cat.slug}`} class="footer-link">{cat.nome}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Colonna 5: Info & Privacy -->
      <div class="footer-col">
        <h3 class="footer-title">Info & Privacy</h3>
        <ul class="footer-list">
          {legalLinks.map((item) => (
            <li>
              <a href={item.url} target="_blank" rel="noopener noreferrer" class="footer-link">{item.nome}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p class="footer-copy-cc"><span class="footer-copy-inline">(c) 1974-2026 Eccetto</span> dove diversamente indicato, il contenuto di questo sito è concesso in licenza <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/deed.it" target="_blank" rel="noopener noreferrer" class="footer-link">Creative Commons: Attribuzione – Non commerciale – Condividi allo stesso modo 4.0 Internazionale (CC BY-NC-SA 4.0)</a>.</p>
      <p class="footer-legal-bottom">Associazione Fede e Luce Aps – C.F. 96000680585 | Iscrizione al RUNTS n. 15031</p>
    </div>
  </div>
  </footer>
</div>

<style>
  /* Wrapper senza overflow/transform per non schiacciare z-index; nessun position/z-index qui */
  .footer-reveal-wrap {
    /* no overflow, no transform */
  }

  .reveal-spacer {
    width: 100%;
    height: 0;
    pointer-events: none;
    background: transparent;
  }

  @media (min-width: 769px) {
    .reveal-spacer {
      height: var(--footer-height);
    }

    .site-footer {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      z-index: 1;
    }
  }

  .site-footer {
    font-family: 'Raleway', system-ui, sans-serif;
    background: #1a1a1a;
    color: rgba(255, 255, 255, 0.88);
    width: 100%;
  }

  .footer-inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem 1.5rem 1.5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.1fr 1fr 1.2fr 0.7fr 0.9fr;
    gap: 1.5rem 2rem;
    align-items: start;
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .footer-col-identity {
    max-width: 280px;
    padding-right: 1.5rem;
    border-right: 1px solid rgba(255, 255, 255, 0.2);
  }

  .footer-logo-link {
    display: block;
    margin-bottom: 0.5rem;
    background: transparent !important;
  }

  .footer-logo {
    height: 55px;
    width: auto;
    display: block;
    filter: invert(1);
    background: transparent !important;
    background-color: transparent !important;
  }

  .footer-social {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background: transparent;
    color: rgba(255, 255, 255, 0.8);
    transition: color 0.2s ease;
  }

  .footer-social-link:hover {
    color: #fff;
  }

  .footer-tagline {
    font-size: 0.8125rem;
    letter-spacing: 0.02em;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .footer-editor {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
    line-height: 1.45;
  }

  .footer-legal {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.45;
    margin: 0.35rem 0 0;
  }

  .footer-title {
    font-family: 'Raleway', system-ui, sans-serif;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.6);
    margin: 0 0 0.15rem;
  }

  .footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-list li {
    margin-bottom: 0.15rem;
  }

  .footer-temi-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0 1rem;
  }

  .footer-link {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.88);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: #fff;
  }

  .footer-bottom {
    margin-top: 1.75rem;
    padding-top: 1.25rem;
    border-top: 1px solid rgba(255, 255, 255, 0.12);
  }

  .footer-copy-cc {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.5;
    margin: 0 0 0.35rem;
  }

  .footer-copy-inline {
    white-space: nowrap;
  }

  .footer-copy-cc .footer-link {
    font-size: inherit;
  }

  .footer-legal-bottom {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0.5rem 0 0;
  }


  /* Mobile */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 1.25rem;
    }
  }

  @media (max-width: 768px) {
    .site-footer {
      position: static;
    }

    .footer-inner {
      padding: 1.5rem 1rem 1.25rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .footer-col-identity {
      max-width: none;
    }

    .footer-temi-grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer-bottom {
      margin-top: 1.25rem;
      padding-top: 1rem;
    }
  }
</style>
