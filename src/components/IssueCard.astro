---
interface Props {
  cover_url?: string;
  titolo_numero: string;
  numero: number;
  anno: number;
  mese?: string;
  periodo_label?: string;
  tipo_rivista: string;
  id_numero: string;
}

const { cover_url, titolo_numero, numero, anno, mese, periodo_label, tipo_rivista, id_numero } = Astro.props;

// Determina la testata
const testata = tipo_rivista === 'insieme' || titolo_numero.toLowerCase().includes('insieme') 
  ? 'Insieme' 
  : 'Ombre e Luci';

// Genera il link al numero
const numeroSlug = id_numero.toLowerCase().replace(/[^a-z0-9-]/g, '-');
const linkUrl = `/archivio/${numeroSlug}`;

// Formatta il periodo
const periodo = periodo_label || mese || '';
---

<a href={linkUrl} class="issue-card">
  <div class="issue-card-image-wrapper">
    {cover_url ? (
      <img 
        src={cover_url} 
        alt={`Copertina ${testata} n. ${numero} - ${anno}`}
        class="issue-card-image"
        loading="lazy"
      />
    ) : (
      <div class="issue-card-placeholder">
        <span class="issue-card-placeholder-text">{testata}</span>
        <span class="issue-card-placeholder-number">n. {numero}</span>
      </div>
    )}
    <div class="issue-card-badge">
      {testata}
    </div>
  </div>
  
  <div class="issue-card-content">
    <h3 class="issue-card-title">{titolo_numero}</h3>
    <div class="issue-card-meta">
      <span class="issue-card-number">n. {numero}</span>
      <span class="issue-card-year">{anno}</span>
      {periodo && (
        <span class="issue-card-period">{periodo}</span>
      )}
    </div>
  </div>
</a>

<style>
  .issue-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .issue-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .issue-card-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: #f5f5f5;
  }

  .issue-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .issue-card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1rem;
  }

  .issue-card-placeholder-text {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .issue-card-placeholder-number {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .issue-card-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: rgba(0, 0, 0, 0.75);
    color: white;
    padding: 0.375rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    backdrop-filter: blur(4px);
  }

  .issue-card-content {
    padding: 1.25rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .issue-card-title {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.4;
    margin: 0 0 0.75rem 0;
    color: var(--text-color);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .issue-card-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .issue-card-number,
  .issue-card-year,
  .issue-card-period {
    display: inline-block;
  }

  .issue-card-number {
    font-weight: 600;
    color: var(--text-color);
  }

  .issue-card-year::before {
    content: '•';
    margin-right: 0.5rem;
    opacity: 0.5;
  }

  .issue-card-period::before {
    content: '•';
    margin-right: 0.5rem;
    opacity: 0.5;
  }
</style>

