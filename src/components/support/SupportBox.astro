---
import AmountChips from './AmountChips.astro';
import { PAYPAL_DONATE_URL } from '../../config/support.ts';
---

<div class="support-box" id="support-box">
  <p class="support-box-label">Scelta importo rapida</p>
  <AmountChips frequency="monthly" />
  <p class="support-box-modi-label">Due modalità</p>
  <div class="support-box-toggle" role="group" aria-label="Modalità donazione">
    <button type="button" class="support-toggle-btn active" data-frequency="monthly" data-track="support_toggle_frequency">
      Donazione mensile
    </button>
    <button type="button" class="support-toggle-btn" data-frequency="once" data-track="support_toggle_frequency">
      Donazione singola
    </button>
  </div>
  <a
    href={PAYPAL_DONATE_URL}
    target="_blank"
    rel="noopener noreferrer"
    class="support-box-cta support-box-cta-primary"
    id="support-paypal-cta"
    data-track="support_click_paypal"
    data-cta-monthly="Dona"
    data-cta-once="Dona"
  >
    Dona
  </a>
  <a href="#bonifico" class="support-box-bonifico" id="support-bonifico-scroll" data-track="support_click_bonifico_scroll">
    Preferisci il bonifico (senza commissioni)
  </a>
</div>

<script>
  (function () {
    const box = document.getElementById('support-box');
    const cta = document.getElementById('support-paypal-cta');
    const toggleBtns = box?.querySelectorAll('.support-toggle-btn');
    const chips = box?.querySelectorAll('.amount-chip');

    if (!cta) return;

    const ctaMonthly = cta.getAttribute('data-cta-monthly') || 'Dona';
    const ctaOnce = cta.getAttribute('data-cta-once') || 'Dona';

    function emit(name, detail) {
      try {
        window.dispatchEvent(new CustomEvent(name, { detail: detail || {} }));
        if (typeof window.dataLayer !== 'undefined') {
          window.dataLayer.push({ event: name, ...(detail || {}) });
        }
      } catch (_) {}
    }

    toggleBtns?.forEach((btn) => {
      btn.addEventListener('click', () => {
        toggleBtns.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');
        const freq = btn.getAttribute('data-frequency');
        emit('support_toggle_frequency', { frequency: freq });
        cta.textContent = freq === 'monthly' ? ctaMonthly : ctaOnce;
      });
    });

    chips?.forEach((chip) => {
      chip.addEventListener('click', () => {
        chips.forEach((c) => c.classList.remove('active'));
        chip.classList.add('active');
        const amount = chip.getAttribute('data-amount');
        emit('support_select_amount', { amount: amount === 'other' ? 'other' : Number(amount) });
      });
    });

    cta.addEventListener('click', () => emit('support_click_paypal'));

    const bonificoLink = document.getElementById('support-bonifico-scroll');
    if (bonificoLink) {
      bonificoLink.addEventListener('click', (e) => {
        emit('support_click_bonifico_scroll', { target: 'bonifico' });
      });
    }
  })();
</script>

<style>
  .support-box {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    padding: 1.75rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  }
  .support-box-label {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--text-secondary);
    margin: 0 0 0.75rem 0;
  }
  .support-box-modi-label {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--text-secondary);
    margin: 1.25rem 0 0.5rem 0;
  }
  .support-box-toggle {
    display: flex;
    gap: 0.5rem;
    margin: 0 0 1rem 0;
  }
  .support-toggle-btn {
    flex: 1;
    font-family: 'Raleway', system-ui, sans-serif;
    font-size: 0.9375rem;
    font-weight: 600;
    padding: 0.6rem 1rem;
    border: 2px solid var(--border-color);
    border-radius: 8px;
    background: var(--bg-light);
    color: var(--text-secondary);
    cursor: pointer;
    transition: border-color 0.2s, background 0.2s, color 0.2s;
  }
  .support-toggle-btn:hover {
    border-color: var(--accent-color);
    color: var(--accent-color);
  }
  .support-toggle-btn.active {
    border-color: var(--accent-color);
    background: var(--accent-color);
    color: #fff;
  }
  .support-box-cta {
    display: block;
    text-align: center;
    font-family: 'Raleway', system-ui, sans-serif;
    font-weight: 700;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    background: var(--accent-color);
    color: #fff;
    text-decoration: none;
    margin: 0 0 1rem 0;
    transition: background 0.2s, transform 0.2s;
  }
  .support-box-cta-primary {
    font-size: 1.25rem;
    padding: 1.15rem 1.75rem;
    box-shadow: 0 4px 16px rgba(196, 30, 58, 0.25);
  }
  .support-box-cta:hover {
    background: var(--accent-hover);
    color: #fff;
    transform: translateY(-2px);
  }
  .support-box-bonifico {
    font-size: 0.875rem;
    color: var(--accent-color);
    text-decoration: none;
    display: inline-block;
  }
  .support-box-bonifico:hover {
    text-decoration: underline;
  }
</style>
