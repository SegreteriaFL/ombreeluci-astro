---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import IssueCard from '../../components/IssueCard.astro';
import { ViewTransitions } from 'astro:transitions';
import '../../styles/global.css';
import numeriData from '../../data/numeri_consolidati.json';

// Carica i dati dei numeri (tutti i 197)
const numeri = numeriData as Array<{
  id_numero: string;
  tipo_rivista: string;
  numero_progressivo: number;
  display_title: string;
  titolo_numero: string;
  anno_pubblicazione: number;
  periodo_label?: string;
  copertina_url?: string;
  [key: string]: any;
}>;

// Estrai anni unici per il filtro
const anni = Array.from(new Set(numeri.map((n) => n.anno_pubblicazione)))
  .filter((y) => y != null)
  .sort((a, b) => b - a);

// Ordina i numeri per data (più recenti prima) di default
const numeriOrdinati = [...numeri].sort((a, b) => {
  const annoA = a.anno_pubblicazione ?? 0;
  const annoB = b.anno_pubblicazione ?? 0;
  if (annoA !== annoB) return annoB - annoA;
  return (b.numero_progressivo ?? 0) - (a.numero_progressivo ?? 0);
});
---

<html lang="it">
  <head>
    <meta name="robots" content="noindex, nofollow" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Archivio - Ombre e Luci</title>
    <ViewTransitions />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Raleway', system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        color: var(--text-color, #2d2d2d);
        background: var(--bg-light, #f5f5f3);
      }

      .archivio-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
      }

      .archivio-header {
        margin-bottom: 2.5rem;
      }

      .archivio-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
      }

      .archivio-subtitle {
        font-size: 1.125rem;
        color: #666;
        margin-bottom: 2rem;
      }

      .filters-container {
        background: transparent;
        padding: 0;
        margin-bottom: 2rem;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
      }

      .filter-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .filter-label {
        font-size: 0.875rem;
        font-weight: 400;
        color: #666;
        font-family: 'Raleway', system-ui, -apple-system, sans-serif;
      }

      .filter-select {
        padding: 0.625rem 1rem;
        border: none;
        border-radius: 8px;
        font-size: 0.9375rem;
        background: rgba(0, 0, 0, 0.05);
        color: #333;
        cursor: pointer;
        transition: all 0.2s ease;
        font-family: 'Raleway', system-ui, -apple-system, sans-serif;
        min-width: 150px;
      }

      .filter-select:hover {
        background: rgba(0, 0, 0, 0.08);
      }

      .filter-select:focus {
        outline: none;
        background: rgba(0, 0, 0, 0.1);
      }

      .results-count {
        margin-left: auto;
        font-size: 0.9375rem;
        color: #666;
        font-weight: 500;
      }

      .issues-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
      }

      .issue-card-wrapper {
        min-height: 0;
      }

      .no-results {
        text-align: center;
        padding: 4rem 2rem;
        color: #666;
      }

      .no-results-title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: #333;
      }

      .no-results-text {
        font-size: 1rem;
      }

      /* Responsive */
      @media (max-width: 1200px) {
        .issues-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      @media (max-width: 768px) {
        .archivio-container {
          padding: 1.5rem 1rem;
        }

        .archivio-title {
          font-size: 2rem;
        }

        .filters-container {
          flex-direction: column;
          align-items: stretch;
        }

        .filter-group {
          width: 100%;
        }

        .results-count {
          margin-left: 0;
          margin-top: 0.5rem;
        }

        .issues-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 1rem;
        }
      }

      @media (max-width: 480px) {
        .issues-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="site-main">
    <div class="archivio-container">
      <div class="archivio-header">
        <h1 class="archivio-title">Archivio</h1>
        <p class="archivio-subtitle">
          Esplora tutti i numeri di Ombre e Luci e Insieme
        </p>
      </div>

      <div class="filters-container">
        <div class="filter-group">
          <label for="filter-anno" class="filter-label">Anno</label>
          <select id="filter-anno" class="filter-select">
            <option value="">Tutti gli anni</option>
            {anni.map(anno => (
              <option value={anno}>{anno}</option>
            ))}
          </select>
        </div>

        <div class="filter-group">
          <label for="filter-testata" class="filter-label">Testata</label>
          <select id="filter-testata" class="filter-select">
            <option value="">Tutte</option>
            <option value="ombre_e_luci">Ombre e Luci</option>
            <option value="insieme">Insieme</option>
          </select>
        </div>

        <div class="filter-group">
          <label for="filter-ordine" class="filter-label">Ordinamento</label>
          <select id="filter-ordine" class="filter-select">
            <option value="desc">Data ↓</option>
            <option value="asc">Data ↑</option>
          </select>
        </div>

        <div class="results-count" id="results-count">
          {numeri.length} numeri
        </div>
      </div>

      <div class="issues-grid" id="issues-grid">
        {numeriOrdinati.map(numero => (
          <div
            class="issue-card-wrapper"
            data-id={numero.id_numero}
            data-anno={numero.anno_pubblicazione ?? ''}
            data-tipo={numero.tipo_rivista}
            data-numero={numero.numero_progressivo ?? 0}
          >
            <IssueCard
              cover_url={numero.copertina_url}
              titolo_numero={numero.titolo_numero}
              numero={numero.numero_progressivo}
              anno={numero.anno_pubblicazione}
              periodo_label={numero.periodo_label}
              tipo_rivista={numero.tipo_rivista}
              id_numero={numero.id_numero}
            />
          </div>
        ))}
      </div>

      <div class="no-results" id="no-results" style="display: none;">
        <h2 class="no-results-title">Nessun risultato</h2>
        <p class="no-results-text">Prova a modificare i filtri per vedere più risultati.</p>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const filterAnno = document.getElementById('filter-anno');
        const filterTestata = document.getElementById('filter-testata');
        const filterOrdine = document.getElementById('filter-ordine');
        const issuesGrid = document.getElementById('issues-grid');
        const noResults = document.getElementById('no-results');
        const resultsCount = document.getElementById('results-count');
        if (!filterAnno || !filterTestata || !filterOrdine || !issuesGrid || !noResults || !resultsCount) return;

        var wrappers = Array.from(issuesGrid.querySelectorAll('.issue-card-wrapper'));

        function filterAndSort() {
          var annoFiltro = filterAnno.value;
          var testataFiltro = filterTestata.value;
          var ordineFiltro = filterOrdine.value;

          wrappers.forEach(function(w) {
            var anno = w.getAttribute('data-anno');
            var tipo = w.getAttribute('data-tipo');
            var matchAnno = !annoFiltro || anno === annoFiltro;
            var matchTipo = !testataFiltro || tipo === testataFiltro;
            w.style.display = matchAnno && matchTipo ? '' : 'none';
          });

          var visible = wrappers.filter(function(w) { return w.style.display !== 'none'; });

          visible.sort(function(a, b) {
            var annoA = parseInt(a.getAttribute('data-anno') || '0', 10);
            var annoB = parseInt(b.getAttribute('data-anno') || '0', 10);
            var numA = parseInt(a.getAttribute('data-numero') || '0', 10);
            var numB = parseInt(b.getAttribute('data-numero') || '0', 10);
            if (annoA !== annoB) return ordineFiltro === 'desc' ? annoB - annoA : annoA - annoB;
            return ordineFiltro === 'desc' ? numB - numA : numA - numB;
          });

          visible.forEach(function(w) { issuesGrid.appendChild(w); });

          resultsCount.textContent = visible.length + ' ' + (visible.length === 1 ? 'numero' : 'numeri');
          issuesGrid.style.display = visible.length ? 'grid' : 'none';
          noResults.style.display = visible.length ? 'none' : 'block';
        }

        filterAnno.addEventListener('change', filterAndSort);
        filterTestata.addEventListener('change', filterAndSort);
        filterOrdine.addEventListener('change', filterAndSort);
        filterAndSort();
      });
    </script>
    </main>
    <Footer />
  </body>
</html>

