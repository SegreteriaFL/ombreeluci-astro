---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import IssueCard from '../../components/IssueCard.astro';
import { ViewTransitions } from 'astro:transitions';
import '../../styles/global.css';

// Carica i numeri dalla content collection e ordina per sort_order discendente (ultimo uscito primo, es. OEL-172)
const rawNumeri = await getCollection('numeri');
const numeriOrdinati = [...rawNumeri].sort((a, b) => {
  const orderA = a.data.sort_order ?? 0;
  const orderB = b.data.sort_order ?? 0;
  return orderB - orderA;
});

// Deriva anno da pubDate per filtro e card
function annoFromNumero(entry: (typeof rawNumeri)[0]): number {
  const pub = entry.data.pubDate;
  if (!pub) return 0;
  const d = typeof pub === 'string' ? new Date(pub) : pub;
  return d.getFullYear();
}

// Estrai anni unici per il filtro (dal più recente)
const anni = Array.from(new Set(numeriOrdinati.map((n) => annoFromNumero(n))))
  .filter((y) => y != null && y > 0)
  .sort((a, b) => b - a);
---

<html lang="it">
  <head>
    <meta name="robots" content="noindex, nofollow" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Archivio - Ombre e Luci</title>
    <ViewTransitions />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Raleway', system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background: var(--bg-light, #f5f5f3);
      }

      .archivio-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem 1.5rem;
      }

      .archivio-header {
        margin-bottom: 2.5rem;
      }

      .archivio-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-color);
        margin-bottom: 0.5rem;
      }

      .archivio-subtitle {
        font-size: 1.125rem;
        color: var(--text-secondary);
        margin-bottom: 2rem;
      }

      .filters-container {
        background: transparent;
        padding: 0;
        margin-bottom: 2rem;
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
      }

      .filter-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .filter-label {
        font-size: 0.875rem;
        font-weight: 400;
        color: var(--text-secondary);
        font-family: 'Raleway', system-ui, -apple-system, sans-serif;
      }

      .filter-select {
        padding: 0.625rem 1rem;
        border: none;
        border-radius: 8px;
        font-size: 0.9375rem;
        background: rgba(0, 0, 0, 0.05);
        color: var(--text-color);
        cursor: pointer;
        transition: all 0.2s ease;
        font-family: 'Raleway', system-ui, -apple-system, sans-serif;
        min-width: 150px;
      }

      .filter-select:hover {
        background: rgba(0, 0, 0, 0.08);
      }

      .filter-select:focus {
        outline: none;
        background: rgba(0, 0, 0, 0.1);
      }

      .results-count {
        margin-left: auto;
        font-size: 0.9375rem;
        color: var(--text-secondary);
        font-weight: 500;
      }

      .issues-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
      }

      .issue-card-wrapper {
        min-height: 0;
      }

      .no-results {
        text-align: center;
        padding: 4rem 2rem;
        color: var(--text-secondary);
      }

      .no-results-title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: var(--text-color);
      }

      .no-results-text {
        font-size: 1rem;
      }

      /* Responsive */
      @media (max-width: 1200px) {
        .issues-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      @media (max-width: 768px) {
        .archivio-container {
          padding: 1.5rem 1rem;
        }

        .archivio-title {
          font-size: 2rem;
        }

        .filters-container {
          flex-direction: column;
          align-items: stretch;
        }

        .filter-group {
          width: 100%;
        }

        .results-count {
          margin-left: 0;
          margin-top: 0.5rem;
        }

        .issues-grid {
          grid-template-columns: repeat(2, 1fr);
          gap: 1rem;
        }
      }

      @media (max-width: 480px) {
        .issues-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="site-main">
    <div class="archivio-container">
      <div class="archivio-header">
        <h1 class="archivio-title">Archivio</h1>
        <p class="archivio-subtitle">
          Esplora tutti i numeri di Ombre e Luci e Insieme
        </p>
      </div>

      <div class="filters-container">
        <div class="filter-group">
          <label for="filter-anno" class="filter-label">Anno</label>
          <select id="filter-anno" class="filter-select" data-filter-year>
            <option value="">Tutti gli anni</option>
            {anni.map(anno => (
              <option value={anno}>{anno}</option>
            ))}
          </select>
        </div>

        <div class="filter-group">
          <label for="filter-testata" class="filter-label">Testata</label>
          <select id="filter-testata" class="filter-select" data-filter-type>
            <option value="">Tutte</option>
            <option value="ombreeluci">Ombre e Luci</option>
            <option value="insieme">Insieme</option>
          </select>
        </div>

        <div class="filter-group">
          <label for="filter-ordine" class="filter-label">Ordinamento</label>
          <select id="filter-ordine" class="filter-select">
            <option value="desc">Data ↓</option>
            <option value="asc">Data ↑</option>
          </select>
        </div>

        <div class="results-count" id="results-count">
          {numeriOrdinati.length} numeri
        </div>
      </div>

      <div class="issues-grid" id="issues-grid">
        {numeriOrdinati.map((entry) => {
          const d = entry.data;
          const anno = annoFromNumero(entry);
          const tipoFilter = d.tipo === 'insieme' ? 'insieme' : 'ombreeluci';
          const tipoRivista = d.tipo === 'insieme' ? 'insieme' : 'ombre_e_luci';
          return (
            <div
              class="issue-card-wrapper"
              data-id={d.id ?? entry.slug}
              data-year={anno || ''}
              data-type={tipoFilter}
              data-numero={d.numero ?? d.numero_progressivo ?? 0}
            >
              <IssueCard
                cover_url={d.copertina ?? d.copertina_url}
                titolo_numero={d.title ?? d.titolo_numero ?? d.display_title ?? ''}
                numero={d.numero ?? d.numero_progressivo ?? 0}
                anno={anno}
                periodo_label={d.periodo_label ?? d.data_pubblicazione}
                tipo_rivista={tipoRivista}
                id_numero={d.id ?? entry.slug}
              />
            </div>
          );
        })}
      </div>

      <div class="no-results" id="no-results" style="display: none;">
        <h2 class="no-results-title">Nessun risultato</h2>
        <p class="no-results-text">Prova a modificare i filtri per vedere più risultati.</p>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const filterAnno = document.getElementById('filter-anno');
        const filterTestata = document.getElementById('filter-testata');
        const filterOrdine = document.getElementById('filter-ordine');
        const issuesGrid = document.getElementById('issues-grid');
        const noResults = document.getElementById('no-results');
        const resultsCount = document.getElementById('results-count');
        if (!filterAnno || !filterTestata || !filterOrdine || !issuesGrid || !noResults || !resultsCount) return;

        var wrappers = Array.from(issuesGrid.querySelectorAll('.issue-card-wrapper'));

        function filterAndSort() {
          var annoFiltro = filterAnno.value.trim();
          var testataFiltro = filterTestata.value.trim();
          var ordineFiltro = filterOrdine.value;

          wrappers.forEach(function(w) {
            var year = String(w.getAttribute('data-year') || '');
            var type = String(w.getAttribute('data-type') || '');
            var matchYear = !annoFiltro || year === annoFiltro;
            var matchType = !testataFiltro || type === testataFiltro;
            w.style.display = matchYear && matchType ? '' : 'none';
          });

          var visible = wrappers.filter(function(w) { return w.style.display !== 'none'; });

          visible.sort(function(a, b) {
            var annoA = parseInt(a.getAttribute('data-year') || '0', 10);
            var annoB = parseInt(b.getAttribute('data-year') || '0', 10);
            var numA = parseInt(a.getAttribute('data-numero') || '0', 10);
            var numB = parseInt(b.getAttribute('data-numero') || '0', 10);
            if (annoA !== annoB) return ordineFiltro === 'desc' ? annoB - annoA : annoA - annoB;
            return ordineFiltro === 'desc' ? numB - numA : numA - numB;
          });

          visible.forEach(function(w) { issuesGrid.appendChild(w); });

          resultsCount.textContent = visible.length + ' ' + (visible.length === 1 ? 'numero' : 'numeri');
          issuesGrid.style.display = visible.length ? 'grid' : 'none';
          noResults.style.display = visible.length ? 'none' : 'block';
        }

        filterAnno.addEventListener('change', filterAndSort);
        filterTestata.addEventListener('change', filterAndSort);
        filterOrdine.addEventListener('change', filterAndSort);
        filterAndSort();
      });
    </script>
    </main>
    <Footer />
  </body>
</html>

